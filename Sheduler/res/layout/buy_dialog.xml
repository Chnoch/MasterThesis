<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <CheckBox android:id="@+id/checkbox_half_fare"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/half_fare"
              android:checked="true"
              android:onClick="saveBuyingSettings"
              android:layout_margin="5dp"/>
    <CheckBox android:id="@+id/checkbox_day_pass"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/day_pass"
              android:onClick="saveBuyingSettings"
              android:layout_margin="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="left"
                android:text="SMS code:"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sms_code_result"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="left"
                android:text=""/>
    </LinearLayout>
</LinearLayout>